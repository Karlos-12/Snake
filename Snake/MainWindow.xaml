<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1600" Background="#FF1A1A1A" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="main" Margin="0,0,0,100"/>
        <Button Content="Play!" Margin="1270,0,0,0" Click="Button_Click" Height="100" VerticalAlignment="Bottom" FontSize="32" FontWeight="Bold" Background="#7F2E2E2E" BorderBrush="{x:Null}" Foreground="White" FontFamily="Consolas"/>


    </Grid>
</Window>
